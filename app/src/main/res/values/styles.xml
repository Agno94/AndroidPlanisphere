<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="gridAz">@color/colorGray</item>
        <item name="gridAzText">@color/colorBlack</item>
        <item name="star">@color/colorBlack</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="gridAz">@color/colorLightBlue</item>
        <item name="gridAzText">@color/colorLightBlue</item>
        <item name="android:windowBackground">@color/colorDarkBlue</item>
        <item name="star">@color/colorYellow</item>
    </style>

    <style name="AppThemeNight" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="gridAz">@color/colorRed</item>
        <item name="gridAzText">@color/colorRed</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="star">@color/colorRed</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
